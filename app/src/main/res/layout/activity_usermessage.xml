<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient">
    <RadioGroup
        android:background="@drawable/login_back"
        android:id="@+id/rd_group"
        android:layout_width="300px"
        android:layout_height="match_parent"
       android:layout_alignParentLeft="true"

        android:orientation="vertical">
        <RadioButton
            android:id="@+id/BasicInformationButton"
            android:background="@drawable/login_back"
            android:textColor="#ffffff"
            android:drawableTop="@drawable/select_about"
            style="@style/tab_menu_item"
            android:text="个人信息"/>

        <RadioButton
            android:id="@+id/PersonalInformationButton"
            android:background="@drawable/login_back"
            android:textColor="#ffffff"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/select_result"
            android:text="面试评价" />

        <ImageView
            android:id="@+id/exitMain"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:layout_width="90px"
            android:layout_height="90px"
            android:background="@mipmap/usermessageback" />
    </RadioGroup>

    <FrameLayout
        android:layout_toRightOf="@+id/rd_group"
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>
    </FrameLayout>
</RelativeLayout>