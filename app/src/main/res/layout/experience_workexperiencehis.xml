<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="64px"
            android:drawableLeft="@drawable/circle_border"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="中国微软"
            android:textColor="@color/maintextColor"
            android:textSize="34px" />

        <TextView
            android:id="@+id/eTime"
            android:layout_margin="10dp"
            android:textSize="30px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2008-2012" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70px">
        <TextView
            android:id="@+id/duty"
            android:layout_width="wrap_content"
            android:layout_height="64px"
            android:gravity="center_vertical"
            android:text="java开发"
            android:textColor="@color/exper"
            android:textSize="31px" />



        <TextView
            android:id="@+id/company_phone"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="64px"
            android:gravity="center_vertical"
            android:text="13888888888"
            android:textColor="@color/exper"
            android:textSize="31px" />

        <TextView
            android:id="@+id/salary"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="64px"
            android:gravity="center_vertical"
            android:text="12K"
            android:textColor="@color/exper"
            android:textSize="31px" />

        <TextView
            android:id="@+id/dimission_reason"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="64px"
            android:gravity="center_vertical"
            android:text="老板带着小姨子跑路了"
            android:textColor="@color/exper"
            android:textSize="31px" />

    </LinearLayout>


</LinearLayout>