<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/tab_all"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/c1"
        android:layout_marginTop="15dp"
        android:background="@drawable/main_background"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="350px">

        <LinearLayout
            android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/reference"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textColor="#0A0A0A"
                android:textSize="25px"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="根据上述问题的回答， 应聘者最突出的一项或 几项特质是：（选择其 他可输入）"/>
            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/All_querty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="#ffffff"/>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
           <LinearLayout
               android:id="@+id/add_suggest"
               android:gravity="center"
               android:background="@mipmap/subjectviewbackground"
               android:layout_width="140px"
               android:layout_height="140px">
               <ImageView
                   android:background="@mipmap/subjectbackground_add"
                   android:layout_width="80px"
                   android:layout_height="80px" />

           </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
        <LinearLayout
            android:id="@+id/subScoreButton"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/main_background"
            android:layout_marginTop="15dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="350px">
            <TextView
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/number"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0A0A0A"
                android:text="主观评价分"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF" />
            <TextView
             android:id="@+id/sendScore"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="0-10"/>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tab_all"
            android:background="@drawable/main_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
     <LinearLayout
         android:orientation="vertical"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginBottom="20dp">
         <TextView
             android:layout_marginTop="10dp"
             android:layout_gravity="center"
             android:textColor="#0A0A0A"
             android:textSize="36px"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="智商"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="50dp"
                android:id="@+id/iq_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </LinearLayout>

     </LinearLayout>
            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="#ffffff"

                />

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="#0A0A0A"
                    android:textSize="36px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="情商"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:layout_marginLeft="50dp"
                        android:id="@+id/eq_recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>
            <View
                android:layout_below="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textColor="#0A0A0A"
                        android:textSize="36px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作能力"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.RecyclerView
                            android:layout_marginLeft="50dp"
                            android:id="@+id/work_recyclerview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="#ffffff"

                    />
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textColor="#0A0A0A"
                        android:textSize="36px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通俗"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.RecyclerView
                            android:layout_marginLeft="50dp"
                            android:id="@+id/comment_recyclerview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>